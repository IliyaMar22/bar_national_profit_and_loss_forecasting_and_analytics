# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# MongoDB Atlas Connection Strings
# Get these from your MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/bar-national?retryWrites=true&w=majority
MONGODB_USERS_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/bar-national-users?retryWrites=true&w=majority

# NextAuth Configuration
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-here-change-this-in-production
NEXTAUTH_URL=https://your-app-url.railway.app

# Optional: Node Environment
NODE_ENV=production
PORT=3000

